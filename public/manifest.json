{
  "manifest_version": 3,
  "name": "Gmsoft Dev Tools",
  "version": "0.0.1",
  "description": "大家软件前端开发工具",
  "permissions": ["cookies", "storage", "tabs"],
  "host_permissions": ["*://*/*"],
  "icons": {
    "16": "assets/cookie.png",
    "48": "assets/cookie.png",
    "128": "assets/cookie.png"
  },
  "action": {
    "default_icon": "assets/cookie.png",
    "default_title": "Gmsoft Dev Tools",
    "default_popup": "config/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "config/options.html",
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
