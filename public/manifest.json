{
  "manifest_version": 3,
  "name": "Gmsoft Dev Tools",
  "version": "0.0.1",
  "description": "大家软件前端开发工具",
  "permissions": ["webRequest", "cookies", "storage", "tabs"],
  "host_permissions": ["*://*/*"],
  "icons": {
    "16": "assets/cookie.png",
    "48": "assets/cookie.png",
    "128": "assets/cookie.png"
  },
  "action": {
    "default_icon": "assets/cookie.png",
    "default_title": "click to show cookies",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["popup.js"]
    }
  ],
  "homepage_url": "https://www.baidu.com",
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
